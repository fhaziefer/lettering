{{!-- src/templates/partials/sender-signature.hbs --}}
<style>
  /* Letter Sender Styles */
  .letter-sender-organization {
    width: 70%;
    margin: 0 auto;
    padding-top: 3.78px;
    position: relative;
    font-size: 15.96px;
    text-align: center;
  }

  .letter-sender-organization p {
    text-indent: 0 !important;
    padding-left: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
    text-align: center !important;
    width: 100%;
    display: block;
  }

  /* Signature Styles */
  .signatures {
    width: 80%;
    margin: 7px auto;
    display: flex;
    justify-content: center;
    gap: 10%;
    position: relative;
  }

  .signature {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 45%;
  }

  .signature-name {
    font-weight: bold;
    margin: 10px 0 0 0;
    font-size: 15.96px;
    text-transform: uppercase;
    text-align: center;
  }

  .signature-title {
    font-size: 15.96px;
    text-align: center;
    margin: 0;
  }

  .signature-canvas {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 85px;
    width: 85px;
    margin-bottom: 2px;
  }

  .signature-image {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
    z-index: 2;
  }

  .placeholder {
    width: 100px;
    height: 100px;
    border: 1px dashed #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #999;
    background-color: #f5f5f5;
  }
</style>
<div class="letter-sender-organization">
  <p>{{tingkatKepengurusan}}<br>Lembaga Ittihadul Muballighin<br>{{daerahKepengurusan}}</p>
</div>
<div class="signatures">
  <div class="signature ketua">
    <div class="signature-canvas">
      {{#if ketuaBase64}}
      <img src="data:image/png;base64,{{ketuaBase64}}" alt="Tanda Tangan Ketua Umum" class="signature-image" />
      {{else}}
      <div class="placeholder">[TTD KETUM]</div>
      {{/if}}
    </div>
    <div class="signature-name">{{namaKetua}}</div>
    <div class="signature-title">Ketua Umum</div>
  </div>
  <div class="signature sekretaris">
    <div class="signature-canvas">
      {{#if sekreBase64}}
      <img src="data:image/png;base64,{{sekreBase64}}" alt="Tanda Tangan Sekretaris Umum" class="signature-image" />
      {{else}}
      <div class="placeholder">[TTD SEKTUM]</div>
      {{/if}}
    </div>
    <div class="signature-name">{{namaSekretaris}}</div>
    <div class="signature-title">Sekretaris Umum</div>
  </div>
</div>